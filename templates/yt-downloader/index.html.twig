{% extends 'base.html.twig' %}

{% block title %}YouTube Downloader{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center">YouTube Downloader</h1>
        <div class="row justify-content-center">
            <div class="col-md-8">
                <!-- Barre de recherche -->
                <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="Entrez l'URL de la vidéo" id="video-url">
                    <select class="form-select" id="format-select">
                        <option value="mp4" selected>MP4</option>
                        <option value="webm">WEBM</option>
                        <option value="mkv">MKV</option>
                    </select>
                    <button class="btn btn-primary" type="button" id="search-btn">
                        <span id="search-btn-text">Rechercher</span>
                        <span id="search-btn-spinner" class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                    </button>
                </div>

                <!-- Détails de la vidéo (initialement masqués) -->
                <div id="video-details" class="card d-none mt-3">
                    <div class="position-relative">
                        <img id="video-thumbnail" class="card-img-top" src="" alt="Miniature de la vidéo" style="display: none;">
                        <!-- Spinner sur la miniature -->
                        <div id="thumbnail-spinner" class="position-absolute top-50 start-50 translate-middle">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Chargement...</span>
                            </div>
                        </div>
                    </div>
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <h5 id="video-title" class="card-title mb-0"></h5>
                        <button class="btn btn-outline-dark ms-3" id="download-btn">
                            <span id="download-btn-text">Télécharger</span>
                            <span id="download-btn-spinner" class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Inclure le script JavaScript -->
    <script src="{{ asset('js/yt-downloader/script-ytb.js') }}"></script>
{% endblock %}
