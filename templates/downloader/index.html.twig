{% extends 'base.html.twig' %}

{% block title %}Web Downloader{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center">YouTube Downloader MP4</h1>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <!-- Barre de recherche -->
                <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="Entrez l'URL de la vidéo" id="video-url">
                    <button class="btn btn-primary" type="button" id="search-btn">
                        <span id="search-btn-text">Rechercher</span>
                        <span id="search-btn-spinner" class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                    </button>
                </div>

                <!-- Détails de la vidéo (initialement masqués) -->
                <div id="video-details" class="card d-none mt-3">
                    <div class="position-relative">
                        <img src="" class="card-img-top" id="video-thumbnail" alt="Miniature de la vidéo" style="display: none;">
                        <!-- Spinner sur la miniature -->
                        <div id="thumbnail-spinner" class="position-absolute top-50 start-50 translate-middle">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Chargement...</span>
                            </div>
                        </div>
                    </div>
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0" id="video-title"></h5>
                        <button class="btn btn-outline-dark ms-3" id="download-btn">Télécharger</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="{{ asset('js/downloader/script-ytb.js') }}"></script>
{% endblock %}
